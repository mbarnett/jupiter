<% page_title(@item.title) %>

<div class="d-flex justify-content-between m-3">
  <%# FILES SIDEBAR %>
  <% if @item.file_sets.present? %>
    <div>
      <%= render partial: 'files_section_sidebar' %>
    </div>
  <% end %>

  <%# MAIN CONTENT %>
  <div>
    <h1 class="mt-3"><%= @item.title %></h1>

    <div class="row mt-3">
      <div class="col">
        <div class="list-group">
          <% @item.display_attributes.each do |name, value| %>
            <div class="list-group-item">
              <%= "#{name.titlecase} : #{value}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col">
      <%= link_to t('edit'), edit_item_path(@item), class: 'btn btn-primary pull-right' %>
    </div>

  </div>
</div>
