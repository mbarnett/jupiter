%h2.mt-3 Create Community
.row.mt-3
  .col
    = simple_form_for @community do |f|
      .form-group.col
        .row
          = f.input :title
        .row
          = f.collection_radio_buttons :visibility, [['public', 'Public'], ['embargo', 'Embargoed'], ['authenticated', 'Authenticated'], ['private', 'Private']], :first, :last
        .row
          = f.button :submit, class: 'btn btn-primary'
