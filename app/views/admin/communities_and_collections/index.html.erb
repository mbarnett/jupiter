<h2>Manage Communities</h2>

<div class="col my-4" >
  <ul id="admin-collection-list" class="list-group">

    <% @communities.each do |community| %>

      <li class="list-group-item">
        <%= link_to community.title, community_path(community)%>

        <div class="ml-auto">
          <div class="btn-group">
            <%= link_to 'Edit', edit_community_path(community), class:'btn btn-secondary' %>
            <%= link_to 'Collections', admin_communities_and_collection_path(community), data: {community_id: community.id }, class: 'btn btn-secondary collection-btn', remote: true %>
            <%= link_to 'Close', '', class: 'btn btn-secondary close-btn hidden-xs-up', data: {community_id: community.id } %>
            <%= button_to "Delete", community_path(community), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %>
          </div>
        </div>
      </li>

      <ul class="list-group" id="<%=community.id%>"></ul>

    <% end %>
  </ul>
</div>
